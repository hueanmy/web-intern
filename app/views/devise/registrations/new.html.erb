<div class="container">
  <div class="row">
    <div  class="form-login col-sm-6 col-md-4 col-md-push-4">
      <h1 class="text-center login-title"><%= t "create_account" %></h1>
      <div class="account-wall">
        <div class=form-signin>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <%= f.email_field :email, autofocus: true, placeholder: t("email"), class: "form-control" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: t("password"), class: "form-control" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t("pass_confirm"),
            class: "form-control" %>
          <%= f.submit t("sign_up"), class: "btn btn-lg" %>
        </div>
        <% end %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
