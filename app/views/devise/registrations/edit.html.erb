<div class="container">
  <div class="row">
    <div class="form-login col-sm-6 col-md-4 col-md-push-4">
      <h2 class="text-center login-title"><%= t "edit" %><%= resource_name.to_s.humanize %></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, class: "edit-field" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t "current" %><%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, class: "edit-field" %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "edit-field" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i><%= t "we_need" %></i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t("update"), class: "btn btn-lg" %>
      </div>
      <% end %>

      <h3><%= t "cancel_my_acount" %></h3>

      <p>
        <%= t "unhappy" %>
        <%= button_to t("cancel_my_account"), registration_path(resource_name),
          data: {confirm: t("you_sure")}, method: :delete %>
      </p>

      <%= link_to t("back"), :back %>
    </div>
  </div>
</div>
