<div class="container">
  <div class="row">
    <div class="form-login col-sm-6 col-md-4 col-md-offset-4">
      <h1 class="text-center login-title"><%= t("sign_in") %></h1>
      <div class="account-wall">
        <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                  alt="">
        <div class="form-signin">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.email_field :email, autofocus: true, placeholder: t("email"), class: "form-control" %>
            <%= f.password_field :password, autocomplete: "off", placeholder: t("password"), class: "form-control"  %>
            <% if devise_mapping.rememberable? -%>
              <div class="field remember-me">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <%= f.submit t("login"), class: "btn btn-lg" %>
          <% end %>
        </div>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
