<header class="banner">
  <nav class="navbar navbar-primary" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <%=link_to image_tag("logo1.png"), root_path, class: "img-responsive center-block"%>
      </div>
      <div class="collapse navbar-collapse" id="navbar-primary-collapse">
        <% if user_signed_in? %>
          <%= current_user.name %>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <form action="#", class="navbar-form", role="search">
                <div class="input-group">
                  <input class="form-control search" id="navbarInput-01" type="search" placeholder="Search">
                </div>
              </form>
            </li>
            <li><%= link_to t("home"), root_path, class: "page-scroll" %></li>
            <li>
              <%= link_to t("about"), page_path(page: "about"), class: "page-scroll" %>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle page-scroll" data-toggle="dropdown">
                <%= t ".account" %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("edit"), edit_user_registration_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("sign_out"), destroy_user_session_path,
                    method: :delete %>
                </li>
              </ul>
        <% else %>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to t(".signup"), new_user_registration_path, class: "page-scroll" %></li>
            <li><%= link_to t(".login"), new_user_session_path, class: "page-scroll" %></li>
          </ul>
        <% end %>
      </div>
    </div>
  </nav>
</header>
